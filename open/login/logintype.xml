<?xml version="1.0" encoding="UTF-8"?>
<!--
    登录方式配置文件
        注：attr->name禁用一些容易引起程序歧义的词汇，如：id等
 -->
<logintypes>
    <logintype>
        <name>qq登录</name>
        <code>qq</code>
        <callbackpath>open/login/tecent/callback.php</callbackpath>
        <path>open/login/tecent/login.php</path>
        <attr>
            <type>input</type>
            <show>APP_ID</show>
            <name>app_key</name>
        </attr>
        <attr>
            <type>input</type>
            <show>KEY</show>
            <name>app_secret</name>
        </attr>
    </logintype>
    <logintype>
